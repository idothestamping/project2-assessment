<div class="mobilefriendlytext">Add your new animal!</div>

<div class="row">
		<div class="col s12">
			<form action='/favorites' method='POST'>
		<div class="row">
			<div class="col s6 input-field">
				<label>Name:</label>
				<input type="text" name="species_name" placeholder="Pig, Horse, etc.">
			</div>
			<div class="col s6 input-field">
				<label>Scientific Name</label>
				<input type="text" name="scientific_name" placeholder="Scientific Name is you know it!">
			</div>
		</div>
		<div class="row">
			<div class="col s12 input-field">
				<label>Image Url</label>
				<input type="text" name="image_url" placeholder="http://www.url.jpg etc.">
			</div>
		</div>
		<div class="row">
			<div class="col s12 input-field">
				<label>description</label>
				<input type="text" name="description" placeholder="Tell me about your animal">
			</div>	
		</div>
		<div class="row">
                <p>Is your Animal Extinct? <br>
                    <label>
                        <input name="extinct" value="true" type="radio" />
                        <span>Yes</span>
                    </label>
                    </p>
                    <p>
                    <label>
                        <input name="extinct" value="false" type="radio" />
                        <span>No</span>
                    </label>
                    </p>
		</div>
			<button class="btn waves-effect waves-light" type="submit" name="action">Submit
				<i class="material-icons right">send</i>
			</button>
		</form>
	</div>
</div>